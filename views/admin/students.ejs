  <script>
    // Mobile sidebar toggle
    document.getElementById('sidebarToggle').addEventListener('click', function() {
      document.querySelector('.sidebar').classList.toggle('mobile-open');
    });
    
    // Close sidebar when clicking outside on mobile
    document.addEventListener('click', function(event) {
      const sidebar = document.querySelector('.sidebar');
      const toggleBtn = document.getElementById('sidebarToggle');
      
      if (window.innerWidth <= 992 && 
          !sidebar.contains(event.target) && 
          !toggleBtn.contains(event.target) && 
          sidebar.classList.contains('mobile-open')) {
        sidebar.classList.remove('mobile-open');
      }
    });
    
    // Add fade-in animation to elements as they appear
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('fade-in');
        }
      });
    }, observerOptions);
    
    // Observe all cards and sections
    document.querySelectorAll('.stats-card, .recent-activity, .quick-actions').forEach((el) => {
      observer.observe(el);
    });
    
    // Simulate loading animation
    window.addEventListener('load', function() {
      // Animate stats numbers
      const statsNumbers = document.querySelectorAll('.stats-content h3');
      statsNumbers.forEach(number => {
        const target = parseInt(number.textContent);
        let current = 0;
        const increment = target / 50;
        const timer = setInterval(() => {
          current += increment;
          if (current >= target) {
            number.textContent = target.toLocaleString();
            clearInterval(timer);
          } else {
            number.textContent = Math.floor(current).toLocaleString();
          }
        }, 30);
      });
    });
  </script>

  <script>
  const filterSelect = document.getElementById('filterSelect');

  const enrollTable = document.getElementById('enrollTable');
  const counselingTable = document.getElementById('counselingTable');
  const enquiryTable = document.getElementById('enquiryTable');
  const recordCount = document.getElementById('recordCount');

  const enrollCount = <%= enrollments.length %>;
  const counselingCount = <%= counselings.length %>;
  const enquiryCount = <%= enquiries.length %>;

  function hideAll() {
    if (enrollTable) enrollTable.style.display = 'none';
    if (counselingTable) counselingTable.style.display = 'none';
    if (enquiryTable) enquiryTable.style.display = 'none';
  }

  // Initialize: hide all, show enroll, and set count
  hideAll();
  enrollTable.style.display = 'block';
  recordCount.textContent = `Enroll Records (${enrollCount})`;

  filterSelect.addEventListener('change', function () {
    hideAll();

    if (this.value === 'enroll') {
      enrollTable.style.display = 'block';
      recordCount.textContent = `Enroll Records (${enrollCount})`;
    } 
    else if (this.value === 'counseling') {
      counselingTable.style.display = 'block';
      recordCount.textContent = `Counseling Records (${counselingCount})`;
    } 
    else if (this.value === 'enquiry') {
      enquiryTable.style.display = 'block';
      recordCount.textContent = `Enquiry Records (${enquiryCount})`;
    } 
    else {
      // all
      if (enrollTable) enrollTable.style.display = 'block';
      if (counselingTable) counselingTable.style.display = 'block';
      if (enquiryTable) enquiryTable.style.display = 'block';
      recordCount.textContent = `All Records (${enrollCount + counselingCount + enquiryCount})`;
    }
  });
</script>


<script>
function setupPagination(tableId, prevBtnId, nextBtnId, pageInfoId) {
  const table = document.querySelector(`#${tableId} tbody`);
  const rows = Array.from(table.querySelectorAll("tr"));
  const perPage = 10;
  let currentPage = 1;

  function render() {
    const start = (currentPage - 1) * perPage;
    const end = start + perPage;

    rows.forEach((row, index) => {
      row.style.display = (index >= start && index < end) ? "" : "none";
    });

    document.getElementById(pageInfoId).textContent =
      `Page ${currentPage} / ${Math.ceil(rows.length / perPage)}`;

    document.getElementById(prevBtnId).disabled = currentPage === 1;
    document.getElementById(nextBtnId).disabled = end >= rows.length;
  }

  document.getElementById(prevBtnId).addEventListener("click", () => {
    if (currentPage > 1) {
      currentPage--;
      render();
    }
  });

  document.getElementById(nextBtnId).addEventListener("click", () => {
    if (currentPage * perPage < rows.length) {
      currentPage++;
      render();
    }
  });

  render();
}

/* INIT PAGINATION */
setupPagination("enrollTable", "enrollPrev", "enrollNext", "enrollPageInfo");
setupPagination("counselingTable", "counselPrev", "counselNext", "counselPageInfo");
setupPagination("enquiryTable", "enquiryPrev", "enquiryNext", "enquiryPageInfo");

/* PRINT FUNCTION */
function printTable(tableId) {
  const printContent = document.getElementById(tableId).innerHTML;
  const win = window.open("", "", "width=900,height=650");
  win.document.write(`
    <html>
      <head>
        <title>Print</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
      </head>
      <body>
        ${printContent}
      </body>
    </html>
  `);
  win.document.close();
  win.print();
}
</script>


