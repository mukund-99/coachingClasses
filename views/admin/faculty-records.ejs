  </style>
</head>
<body>
  <!-- Sidebar -->
   <%- include('nav') %>


  <!-- Main Content -->
  <div class="main-content">
    <!-- Header -->
    <header class="header fade-in">
     <h6>Faculty</h6>
    </header>

    <!-- Stats Cards -->
    <div class="row fade-in">     
      <div class="col-md-12">

        <div class="container mt-4 stats-card">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Faculty List</h4>
   <button onclick="window.print()" class="btn btn-primary">
  Print
</button>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Photo</th>
          <th>Name</th>
          <th>Subject</th>
          <th>Experience</th>
          <th>Status</th>
          <th width="140">Action</th>
        </tr>
      </thead>

      <tbody>
        <% if (faculty.length === 0) { %>
          <tr>
            <td colspan="7" class="text-center text-muted">
              No faculty found
            </td>
          </tr>
        <% } %>

        <% faculty.forEach((f, i) => { %>
          <tr>
            <td><%= i + 1 %></td>

            <td>
              <% if (f.image) { %>
            <img src="<%= f.image ? '/uploads/' + f.image : '/assets/no-image.png' %>"
            width="50" height="50"
            class="rounded-circle border">
              <% } else { %>
                <span class="text-muted">No Image</span>
              <% } %>
            </td>

            <td class="fw-semibold"><%= f.faculty_name %></td>
            <td><%= f.subject %></td>

            <td style="max-width:220px">
              <%= f.experience %>
            </td>

            <td>
              <% if (f.status == 1) { %>
                <span class="badge bg-success">Active</span>
              <% } else { %>
                <span class="badge bg-secondary">Inactive</span>
              <% } %>
            </td>

            <td>
              <a href="/admin/faculty_edit/<%= f.faculty_id %>"
                 class="btn btn-primary btn-sm">
                Edit
              </a>

              <a href="/admin/faculty_delete/<%= f.faculty_id %>"
                 class="btn btn-danger btn-sm"
                 onclick="return confirm('Are you sure to delete?')">
                Delete
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>


        </div>
      </div>
    </div>
  </div>
</body>
</html>