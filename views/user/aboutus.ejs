<div class="row g-4 text-center">

  <% counters.forEach(c => { if (c.status == 1) { %>

    <div class="col-md-3 col-sm-6">
      <div class="p-4 border rounded h-100">

        <h1 class="fw-bold text-<%= c.color %> counter"
            data-target="<%= c.value %>">
          0<%= c.suffix %>
        </h1>

        <h6 class="fw-semibold"><%= c.title %></h6>

